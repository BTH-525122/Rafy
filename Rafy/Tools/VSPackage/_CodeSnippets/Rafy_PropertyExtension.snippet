<?xml version="1.0" encoding="utf-8" ?>
<CodeSnippets  xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
    <CodeSnippet Format="1.0.0">
        <Header>
            <Description>扩展属性</Description>
            <Title>Rafy PropertyExtension</Title>
            <Shortcut>RafyPropertyExtension</Shortcut>
            <Author>HuQingfang</Author>
            <SnippetTypes>
                <SnippetType>Expansion</SnippetType>
            </SnippetTypes>
        </Header>
        <Snippet>
            <Declarations>
                <Literal>
                    <ID>PropertyType</ID>
                    <ToolTip>Property type</ToolTip>
                    <Default>string</Default>
                </Literal>
                <Literal>
                    <ID>PropertyName</ID>
                    <Default>PropertyName</Default>
                </Literal>
                <Literal>
                    <ID>Comment</ID>
                    <Default>属性注释</Default>
                </Literal>
                <Literal>
                    <ID>ClassName</ID>
                    <Default>Entity</Default>
                </Literal>
                <Literal Editable="false">
                    <ID>DeclareType</ID>
                    <Function>ClassName()</Function>
                </Literal>
            </Declarations>
            <Code Language="csharp">
                <![CDATA[#region $PropertyType$ $PropertyName$ ($Comment$)

        /// <summary>
        /// $Comment$ 扩展属性。
        /// </summary>
        public static readonly Property<$PropertyType$> $PropertyName$Property = 
            P<$ClassName$>.RegisterExtension<$PropertyType$>("$PropertyName$", typeof($DeclareType$));
        /// <summary>
        /// 获取 $Comment$ 属性的值。
        /// </summary>
        /// <param name="me">要获取扩展属性值的对象。</param>
        public static $PropertyType$ Get$PropertyName$(this $ClassName$ me)
        {
            return me.GetProperty($PropertyName$Property);
        }
        /// <summary>
        /// 设置 $Comment$ 属性的值。
        /// </summary>
        /// <param name="me">要设置扩展属性值的对象。</param>
        /// <param name="value">设置的值。</param>
        public static void Set$PropertyName$(this $ClassName$ me, $PropertyType$ value)
        {
            me.SetProperty($PropertyName$Property, value);
        }

        #endregion$end$]]>
            </Code>
        </Snippet>
    </CodeSnippet>
</CodeSnippets>